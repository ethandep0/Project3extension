<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.project3.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
        <argument
            android:name="questionCount"
            app:argType="integer" />
        <argument
            android:name="correct"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="totalQuestions"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="difficulty"
            app:argType="string" />
        <argument
            android:name="operation"
            app:argType="string" />
        <argument
            android:name="questionCount"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.project3.QuizFragment"
        android:label="fragment_quiz"
        tools:layout="@layout/fragment_quiz" >
        <action
            android:id="@+id/actionQuizFragmentToStartFragment"
            app:destination="@id/startFragment">
            <argument
                android:name="correct"
                app:argType="integer" />
            <argument
                android:name="questionCount"
                app:argType="integer" />
            <argument
                android:name="difficulty"
                app:argType="string" />
            <argument
                android:name="operation"
                app:argType="string" />
        </action>
    </fragment>
</navigation>